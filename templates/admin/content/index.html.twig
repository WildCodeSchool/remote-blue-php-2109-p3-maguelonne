{% extends 'admin/base.html.twig' %}

{% block title %}Administration du contenu
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center">Administration du contenu web</h1>
	<div class="container d-flex justify-content-lg-around col-lg-8 ">
		<div class="row">
			{% for content in contents %}
				<div class="col-sm-6 ">
					<div class="card m-3 shadow-lg">
						<div class="card-body">
							<h5>{{ content.title }}</h5>
							<a href="{{ path('admin_content_edit', {'id': content.id}) }}" class="btn btn-primary">{{ 'Modifier'|trans }}</a>
						</div>
					</div>
				</div>
			{% else %}
				<tr>
					<td colspan="5">Aucun contenu web trouv√©.</td>
				</tr>
			{% endfor %}
		</div>
	</div>
{% endblock %}
