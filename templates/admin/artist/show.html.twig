{% extends 'admin/base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artistes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Repository</th>
                <td>{{ artist.repository }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ artist.photo }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ artist.video }}</td>
            </tr>
            <tr>
                <th>Audio</th>
                <td>{{ artist.audio }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ artist.nationality }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ artist.body }}</td>
            </tr>
            <tr>
                <th>Instruments</th>
                <td>{{ artist.instruments ? artist.instruments|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ artist.slug }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ artist.alt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_artist_index') }}">back to list</a>

    <a href="{{ path('admin_artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('/admin/artist/_delete_form.html.twig') }}
{% endblock %}