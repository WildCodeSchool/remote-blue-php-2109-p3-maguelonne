{% extends 'base.html.twig' %}


{% block title %}Page de blog{% endblock %}

{% block body %}
<div class="my-5 mx-5">
  <a href="{{ path('home') }}">{{ 'Accueil'|trans }}</a>
  <a href="{{ path('article_index') }}">/{{ 'Tous les articles'|trans }}</a>
</div>

<div class="container-fluid mt-2 mb-4">
  <div class="row d-flex flex-lg-row justify-content-lg-evenly justify-content-center">
    <div class="btn-group col-12 col-lg-3 mb-4 mb-lg-0">
      <button type="button" class="btn btn-lg btn-primary dropdown-toggle shadow " data-bs-display="static" data-bs-toggle="dropdown">{{ 'CATEGORIES'|trans }}</button>
      <div class="dropdown-menu dropdown-menu-lg-end" >
          <a href="#" class="dropdown-item">tétralogie</a>
          <a href="#" class="dropdown-item">Sainte barbe</a>
      </div>
  </div>
  </div>
</div>

{% for article in articles %}
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-lg-9 col-12">
      <div class="card mb-3 shadow-lg">
        <div class="row no-gutters">
          <div class="col-md-4 mx-auto">
            <img src="{{ article.poster }}" class="card-img img-fluid" alt="{{ article.alt }}">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <div class="d-flex flex-column flex-lg-row justify-content-start">
                <h5 class="card-title me-auto">{{ 'Article écrit le'|trans }} : {{ article.createdAt ? article.createdAt|date('d-m-Y') : '' }}</h5>
                <strong class="mx-lg-auto">{{ 'Temps de lecture'|trans }} : {{ article.duration }} minutes</strong>
                <h5 class="ms-lg-auto">{{ 'Catégorie'|trans }} : {{ article.category.name }}</h5>
              </div>
          <h3 class="mb-0">{{ article.title }}</h3>
              <p class="card-text">{{ article.body }}</p>
              <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">{{ 'EN LIRE PLUS'|trans }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endfor %}


{% endblock %}
