{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>
        {% for article in articles %}
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-body">
             <h5 class="card-title">Card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">show</a>
            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">edit</a>
            </div>
            </div>
        {% else %}
        {% endfor %}

    <a href="{{ path('article_new') }}">Create new</a>
    <div class="position-relative">
        <button type="button" class="btn btn-primary btn-lg rounded-circle position-absolute bottom-0 end-0 me-3" id="btn-scroll">
            <img src="{{ asset('build/images/arrow-up-solid.svg') }}" class="icone">
        </button>
    </div>
{% endblock %}
