                <h5 class="card-title me-auto">Article écrit le : {{ article.createdAt ? article.createdAt|date('d-m-Y') : '' }}</h5>
                <strong class="mx-lg-auto">Temps de lecture : {{ article.duration }} minutes</strong>
                <h5 class="ms-lg-auto">Catégorie : {{ article.category.name }}</h5>
              </div>
          <h3 class="mb-0">{{ article.title }}</h3>
              <p class="card-text">{{ article.body }}</p>
              <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">EN LIRE PLUS</a>
