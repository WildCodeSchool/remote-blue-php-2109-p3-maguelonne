{% extends 'base.html.twig' %}
{% block title %}Maguelonne - Contactez-nous!
{% endblock %}
{% block body %}
	<div class="d-flex justify-content-center">
		<div class="col-md-5">
			<h1>{{ 'Contactez-nous!'|trans }}</h1>
			{{ form_start(contactForm) }}
			{{ form_row(contactForm.name) }}
			{{ form_row(contactForm.email) }}
			{{ form_row(contactForm.title) }}
			{{ form_row(contactForm.message) }}
			<button class="btn position-absolute border">
				{{ button_label|default('Envoyer') }}
			</button>
			{{ form_end(contactForm) }}
		</div>
	</div>
{% endblock %}
