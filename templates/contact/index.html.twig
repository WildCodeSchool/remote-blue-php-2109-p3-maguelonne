{% extends 'base.html.twig' %}
{% block title %}Maguelonne - Contactez-nous!{% endblock %}
{% block body %}
<div class="d-flex justify-content-center">
<h1>{{ 'Contactez-nous!'|trans }}</h1>
</div>
{{ form_start(contactForm) }}
<div class="form-group position-relative d-flex
flex-column mb-3 offset-1 offset-md-3 offset-lg-4 col-10 col-md-6 col-lg-4 ">
    {{ form_row(contactForm.name) }}
    </div>
<div class="form-group position-relative d-flex
flex-column mb-3 offset-1 offset-md-3 offset-lg-4 col-10 col-md-6 col-lg-4 ">
    {{ form_row(contactForm.email) }}
</div>
<div class="form-group position-relative pb-5 d-flex
flex-column mb-3 offset-1 offset-md-3 offset-lg-4 col-10 col-md-6 col-lg-4 ">
    {{ form_row(contactForm.title) }}
    {{ form_row(contactForm.message) }}
<button class="btn position-absolute bottom-0 end-0 border">
{{ button_label|default('Envoyer') }}
</button>
{{ form_end(contactForm) }}
</div>
{% endblock %}